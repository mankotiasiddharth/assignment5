  <title>Lego Collection</title>
  <link rel="stylesheet" href="../css/main.css">

<body class="h-screen bg-red-200">

  <%- include('partials/navbar',{page : '/' }) %>

    <div class="hero bg-base-200 ">
      <div class="hero-content text-center">
        <div class="max-w-md">
          <h1 class="text-5xl font-bold">Welcome</h1>
          <p class="py-6">
            Unleash your inner builder and embark on a fascinating journey through the colorful realm of Lego.
          </p>
          <button class="btn btn-primary rounded-md">
            <a href="/lego/sets">Get Started Now</a></button>



        </div>
      </div>

    </div>
