<div class="navbar bg-base-100">
  <div class="flex-1">
    <a href="/" class="btn btn-ghost text-xl">Lego Collection</a>
  </div>
  <div class="flex">
    <ul class="menu menu-horizontal px-1">
      <!-- View Collection and About links (always visible) -->
      <li>
        <a
          class="<%= (page == '/lego/sets') ? 'active' : '' %>"
          href="/lego/sets"
          >View Collection</a
        >
      </li>
      <li>
        <a class="<%= (page == '/about') ? 'active' : '' %>" href="/about"
          >About</a
        >
      </li>

      <% if (session && session.user) { %>
      <!-- Dropdown for logged-in users -->
      <li>
        <details>
          <summary>Account: <%= session.user.userName %></summary>
          <ul class="p-2 right-0">
            <!-- Add to Collection link -->
            <li>
              <a
                class="<%= (page == '/lego/addSet') ? 'active' : '' %>"
                href="/lego/addSet"
              >
                Add to Collection
              </a>
            </li>
            <!-- User History link -->
            <li>
              <a
                class="<%= (page == '/userHistory') ? 'active' : '' %>"
                href="/userHistory"
              >
                User History
              </a>
            </li>
            <!-- Logout link -->
            <li>
              <a href="/logout">Log Out</a>
            </li>
          </ul>
        </details>
      </li>
      <% } else { %>
      <!-- Dropdown for guests -->
      <li>
        <details>
          <summary>Account</summary>
          <ul class="p-2 right-0">
            <!-- Login link -->
            <li>
              <a class="<%= (page == '/login') ? 'active' : '' %>" href="/login"
                >Login</a
              >
            </li>
            <!-- Register link -->
            <li>
              <a
                class="<%= (page == '/register') ? 'active' : '' %>"
                href="/register"
                >Register</a
              >
            </li>
          </ul>
        </details>
      </li>
      <% } %>
    </ul>
  </div>
</div>
